

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm("Register", "UserAccount", FormMethod.Post))
{
    <p>
        Username: @Html.TextBox("Username") <br />
        Password: @Html.TextBox("Password") <br />
        Confirm Password: @Html.TextBox("Password2") <br />
        <input type="submit" value="Register" />
    </p>
} 


<p>@Html.ActionLink("Back", "Index", "Home", new { @class = "btn btn-default" })</p>
